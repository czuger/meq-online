.container

  %h3
    Play a combat card

  .alert.alert-secondary
    %ul.mt-3
      %li Play a combat card and wait for your opponent to play it's.

  .row.mb-2
    - if @actor.is_a? Sauron
      = render partial: 'mob_stats'
    - else
      = render partial: 'hero_stats'

  - if @actor.is_a? Sauron
    = render partial: 'sauron_fight'
  - else
    = render partial: 'hero_fight'

  - if @actor.is_a? Sauron
    %hr
    .row
      .col-12
        = image_tag "monsters/monsters/#{@mob.code}.jpg", class: 'mx-auto d-block'