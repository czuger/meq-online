%h1 Listing movement_preparation_steps

%table
  %thead
    %tr
      -#%th Board
      -#%th Hero
      %th Origine
      %th Destination
      %th
      -#%th Order
      -#%th Validation required
      %th
      %th

  %tbody
    - @movement_preparation_steps.each do |movement_preparation_step|
      %tr
        -#%td= movement_preparation_step.board
        -#%td= movement_preparation_step.hero
        %td= movement_preparation_step.origine
        %td= movement_preparation_step.destination
        %td
          - movement_preparation_step.selected_cards.each do |selected_card|
            = image_tag "hero_cards/actions/#{@heroes_hero.cards[selected_card].pic_path}", class: 'small-card'
        -#%td= movement_preparation_step.card_used
        -#%td= movement_preparation_step.order
        -#%td= movement_preparation_step.validation_required
        %td= link_to 'Modify', edit_hero_movement_preparation_step_path(@actor, movement_preparation_step)
        %td= link_to 'Remove', hero_movement_preparation_step_path(@actor, movement_preparation_step), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Movement preparation step', new_hero_movement_preparation_step_path(@actor)
