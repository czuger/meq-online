.container

  %p#notice= notice

  = render partial: 'hero_info'

  = form_for @movement_preparation_step do |f|
    - if @movement_preparation_step.errors.any?
      #error_explanation
        %h2= "#{pluralize(@movement_preparation_step.errors.count, "error")} prohibited this movement_preparation_step from being saved:"
        %ul
          - @movement_preparation_step.errors.full_messages.each do |message|
            %li= message

  .form-group
    %b Hand:
    = render partial: 'heros/cards_hand'

  .form-group
    = form_tag movement_preparation_steps_path, class: 'form-inline' do
      .mx-2
        = label_tag :move_to, 'Move to'
      .mx-2
        = select_tag(:move_to, options_for_select( @locations.select_tag_data ), class: 'form-control' )
      .mx-2
        = button_tag 'Move', role: :button, class: 'btn btn-secondary disabled', id: :move_hero
      = hidden_field_tag :card_used, ''

  .actions
    = f.submit 'Save'
