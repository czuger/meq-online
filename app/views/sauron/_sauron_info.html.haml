
.form-group
  .row

    .col-3
      %button.btn.btn-secondary.btn-block{ type: :button }
        Plot deck size
        %span.badge.badge-light
          = @board.plot_deck.count

    .col-3
      %button.btn.btn-secondary.btn-block{ type: :button }
        Plot discard size
        %span.badge.badge-light
          = @board.plot_discard.count

    .col-3
      %button.btn.btn-secondary.btn-block{ type: :button }
        Drawn plot cards
        %span.badge.badge-light
          = @actor.drawn_plot_cards.size

