.container
  %p#notice= notice

  = render partial: 'sauron_info'

  .form-group
    = form_tag edit_draw_plot_card_path(@actor), method: :get do
      .row
        = label_tag :nb_cards, 'Plot cards', class: 'col-2 col-form-label'
        .col-1
          = number_field_tag :nb_cards, @nb_cards, max: 10, class: 'form-control', disabled: !@nb_cards
        .col-2
          = button_tag 'Draw cards', role: :button, class: 'btn btn-secondary btn-block'
        .col-3
          = button_tag 'Get golum cards', role: :button, class: 'btn btn-secondary btn-block'


  .form-group
    = form_tag sauron_shadow_cards_path(@actor) do
      .row
        = label_tag :nb_shadow_cards, 'Shadow cards', class: 'col-2 col-form-label'
        .col-1
          = number_field_tag :nb_shadow_cards, 2, max: 10, class: 'form-control'
        .col-2
          = button_tag 'Draw cards', role: :button, value: :draw, class: 'btn btn-secondary btn-block'
        .col-3
          = button_tag 'Discard selected cards', role: :button, class: 'btn btn-secondary btn-block'

.container-fluid

  .card-row
    - @actor.plot_cards.each do |plot_card_number|
      = image_tag "sauron/plots/#{plot_card_number}.png", class: 'big-card'

  .card-row
    - @actor.shadow_cards.each do |plot_card_number|
      = image_tag "sauron/shadows/#{plot_card_number}.png", class: 'big-card'
