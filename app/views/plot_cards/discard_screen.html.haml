.container
  %p#notice= notice

  %h3 Cards currently on board

  .row.my-3
    = render partial: 'used_plot_cards_slots'

  = form_tag plot_cards_discard_path(@actor) do
    = hidden_field_tag :selected_card, nil
    = button_tag 'Discard card', role: :button, class: 'btn btn-secondary ml-4', id: :validate_unique, value: :keep, disabled: true