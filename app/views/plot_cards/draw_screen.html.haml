.container
  %p#notice= notice

  %h3 Choose numbers of plot cards to draw

  = form_tag plot_cards_draw_path(@actor) do
    .row
      .col-3
        = label_tag :nb_cards, 'Cards count', class: 'col-form-label'
      .col-3
        = number_field_tag :nb_cards, 2, max: 8, class: 'form-control'
      .col-3
        = button_tag 'Draw cards(s)', role: :button, class: 'btn btn-secondary btn-block', id: :draw, value: :draw

  - unless @cards_already_drawn.empty?

    %hr

    %h3 Cards already drawn

    - @cards_already_drawn.each do |plot_card_number|
      = image_tag "sauron/plots/#{plot_card_number}.png", class: 'medium-card'
