.container

  %h1 Listing logs

  %table.table
    %thead
      %tr
        %th User
        %th Actor
        %th Action
        %th Card used

    %tbody
      - @logs.each do |log|
        %tr
          - if log.actor
            %td= log.actor.user.name
            %td= log.actor.name
          - else
            %td{ colspan: 2 }
              System
          %td= print_log(log)
          %td
            = show_card(log)
            -#= image_tag( log.card_pic_path, class: 'log-card' ) if log.card_pic_path