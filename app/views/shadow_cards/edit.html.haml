.container
  %p#notice= notice

  %h3 Draw shadow cards
  - unless @drawn_cards.empty?

    .form-group
      .row
        - @drawn_cards.each do |plot_card_number|
          .col-3
            = image_tag "sauron/shadows/#{plot_card_number}.png", class: 'big-card selectable-card-selection-multiple', card_id: plot_card_number

  = form_tag shadow_card_path(@actor), method: :patch do
    .row
      .col-2.col-form-label
        = label_tag :nb_cards, 'Cards count'
      .col-1
        = number_field_tag :nb_cards, 2, max: 20, class: 'form-control'
      .col-3
        = button_tag 'Draw cards(s)', role: :button, class: 'btn btn-secondary btn-block', id: :draw, value: :draw
      .col-2
        = hidden_field_tag :selected_cards, nil
        = button_tag 'Keep card(s)', role: :button, class: 'btn btn-secondary btn-block', id: :validate, value: :keep, disabled: true
      .col-3
        = button_tag 'Discard all', role: :button, class: 'btn btn-secondary btn-block', value: :discard_drawn_cards

  %hr

  %h3 Cards in hand

  - unless @cards_in_hand.empty?
    .form-group
      .row
        - @cards_in_hand.each do |plot_card_number|
          .col-3
            = image_tag "sauron/shadows/#{plot_card_number}.png", class: 'big-card selectable-card-selection-unique', card_id: plot_card_number

    = form_tag shadow_card_path(@actor), method: :patch do
      .row
        .col-2
          = hidden_field_tag :selected_card, nil
          = button_tag 'Play card', role: :button, class: 'btn btn-secondary btn-block', id: :validate, value: :keep, disabled: true
        .col-3
          = button_tag 'Discard card', role: :button, class: 'btn btn-secondary btn-block', value: :discard_card_in_hand