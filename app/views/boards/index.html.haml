.container

  %h1 Listing boards

  %table.table
    %thead
      %tr
        %th Heroes
        %th
        %th
        %th
        %th
        %th


    %tbody
      - @boards.each do |board|
        %tr
          %td= players_list(board)
          %th= board.aasm_state
          %td= link_to( 'Join', board_join_path(board) ) if board.current_heroes_count < board.max_heroes_count || !board.sauron_created
          %td= link_to 'Sauron', board.sauron if board.sauron&.user_id == current_user.id
          %td= link_to 'Heroes', board_heros_path(board) if board.heroes.map{ |h| h.user_id }.include?( current_user.id )
          %td= link_to 'Show', board