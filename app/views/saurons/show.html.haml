.container
  %p#notice= notice

  .form-group
    = form_tag edit_board_draw_plot_cards_path(@board), method: :get do
      .row
        = label_tag :nb_cards, 'Plot cards', class: 'col-2 col-form-label'
        .col-2
          = number_field_tag :nb_cards, @nb_cards, max: 10, class: 'form-control', disabled: !@nb_cards
        .col-2
          = button_tag 'Draw cards', role: :button, class: 'btn btn-secondary btn-block'
        .col-3
          = button_tag 'Get golum cards', role: :button, class: 'btn btn-secondary btn-block'


  .form-group
    = form_tag edit_board_draw_plot_cards_path(@board), method: :get do
      .row
        = label_tag :nb_cards, 'Shadow cards', class: 'col-2 col-form-label'
        .col-2
          = number_field_tag :nb_cards, @nb_cards, max: 10, class: 'form-control', disabled: !@nb_cards
        .col-2
          = button_tag 'Draw cards', role: :button, class: 'btn btn-secondary btn-block'
        .col-3
          = button_tag 'Discard selected cards', role: :button, class: 'btn btn-secondary btn-block'

.container-fluid

  .card-row
    - @sauron.plot_cards.each do |plot_card_number|
      = image_tag "sauron/plots/#{plot_card_number}.png", class: 'big-card'



  %p
    %b Shadow cards:
    = @sauron.shadow_cards