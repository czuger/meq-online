.container

  %h1 Listing heros

  %table
    %thead
      %tr
        %th Name code
        %th Fortitude
        %th Strength
        %th Agility
        %th Wisdom
        %th Location
        %th
        %th
        %th

    %tbody
      - @heros.each do |hero|
        %tr
          %td= hero.name_code
          %td= hero.fortitude
          %td= hero.strength
          %td= hero.agility
          %td= hero.wisdom
          %td= hero.location
          %td= link_to 'Show', hero, role: :button, class: 'btn btn-secondary'
