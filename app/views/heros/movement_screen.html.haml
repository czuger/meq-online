.container
  %p#notice= notice

  %h3
    Movement screen

  .alert.alert-secondary
    %ul.mt-3
      %li At this step, you can decide to move one step further.

  -#= render partial: 'hero_info'
  -#%hr

  %h3 Cards in hand
  = render partial: 'heros/cards_hand'

  = form_tag hero_move_path(@actor) do
    .form-group
      .row

    .form-group
      .mx-2
        = label_tag :move_to, "Move from #{@last_location.humanize} to :"
      .mx-2
        = select_tag( :destination, options_for_select(@locations), class: 'form-control' )

      %input{ id: :selected_cards, name: 'selected_cards', type: :hidden }

    .actions
      = submit_tag 'Save', role: :button, class: 'btn btn-secondary'

